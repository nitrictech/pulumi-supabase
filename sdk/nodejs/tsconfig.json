{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "files": [
        "config/index.ts",
        "config/vars.ts",
        "index.ts",
        "provider.ts",
        "utilities.ts",
        "v0/index.ts",
        "v0/organization.ts",
        "v1/index.ts",
        "v1/migration.ts",
        "v1/organization.ts",
        "v1/project.ts",
        "v1/secret.ts"
    ]
}
